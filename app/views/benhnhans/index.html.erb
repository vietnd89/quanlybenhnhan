<h1 style="font-family: Times New Roman; text-align: center"><%= t ('private_hospital')%></h1>
<!-- menu -->
<div class="container" >
	<div class="navbar-inner">
		<ul class="nav nav-pills "style="margin-top: 18px !important" >
			<li>
				<a href="#" class="active"><%= t('home_page')%></a>
			</li>
			<li>
				<a href="#"><%= t ('introduction')%></a>
			</li>
			<li>
				<a href="#" ><%= t ('contact')%></a>
			</li>
			<li>
				<a href="/benhnhans/new"><%= t ('add_more_patient')%></a>
			</li>
		</ul>
	</div>

<!-- button languge -->
	<select style="margin-left: 654pt" id="language" name="language">
		<option value="en"<% if session[:language].to_s == "en"%><%=  selected="selected"%> <% end %>>English</option>
		<option value="vi" <% if session[:language].to_s == "vi"%><%=  selected="selected"%> <% end %>>Vietnamese</option>
	</select>

<!-- search -->
	<%= form_tag @benhnhans_path,:method => 'get',:id =>'search_bn',:class => 'form-search' do %>
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Search", :ten_benh_nhan.downcase => nil,:class => 'btn' %>
	<div id="refresh_bn">
		<%= render 'list'%>
	</div>
	<% end %>
</div>

<script>
  // key up(function) for search
	$(function() {
		$("#search_bn input").keyup(function() {
			$.get($("#search_bn").attr("action"), $("#search_bn").serialize(), null, "script");
			return false;
		});
		// language vi,en
		$("#language").change(function() {
			var val = $("#language").attr("value");
			// $.get($("#language").attr("action"), $("#language").serialize(), null, "script");
			var url_index = "/benhnhans/index"
			$.ajax({
				Type : "POST",
				url : url_index,
				data : language = 'language=' + val,
				dataType : "script",
				success : function() {
					location.reload();
				}
			})

		});
	}); 
</script>
